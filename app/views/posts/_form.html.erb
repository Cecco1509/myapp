<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-group">
    <% form.label :comment, style: "display: block" %>
    <%= form.text_area :comment, class: "form-control", placeholder: "Scrivi un commento", rows:"3" %>
  </div>
  <br>
  <div class="field-group">
    <% form.label :image, style: "display: block" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>

  <br>
  <br>
  <div>
    <%= form.submit "#{button_name}", class: "btn btn-primary"%>
  </div>
<% end %>
